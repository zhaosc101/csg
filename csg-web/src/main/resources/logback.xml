<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="30 seconds">

	<jmxConfigurator />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>|%d{yyyy-MM-dd HH:mm:ss.SSS}|%X{tradenum}|%-5level-[%msg]-[%logger{36}]-[%thread]%n
			</pattern>
		</layout>
	</appender>

	<appender name="server"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/%d{yyyyMMdd}/server.log.%i</fileNamePattern>
			<MaxHistory>100</MaxHistory>
			<TimeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<MaxFileSize>100MB</MaxFileSize>
			</TimeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>|%d{yyyy-MM-dd HH:mm:ss.SSS}|%X{tradenum}|%-5level-[%msg]-[%logger{36}]-[%thread]%n
			</pattern>
		</encoder>
	</appender>

	<appender name="error"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>WARN</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/%d{yyyyMMdd}/error.log.%i</fileNamePattern>
			<MaxHistory>30</MaxHistory>
			<TimeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<MaxFileSize>50MB</MaxFileSize>
			</TimeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>|%d{yyyy-MM-dd HH:mm:ss.SSS}|%X{tradenum}|%-5level-[%msg]-[%logger{36}]-[%thread]%n
			</pattern>
		</encoder>
	</appender>

	<!-- <logger name="dao" level="DEBUG">

	</logger> -->

	<logger name="com.scg.core" level="debug" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="server" />
		<appender-ref ref="info" />
	</logger>
	<logger name="dao" level="debug" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="server" />
		<appender-ref ref="info" />
	</logger>
	<logger name="com.alibaba.dubbo" level="debug" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="server" />
		<appender-ref ref="info" />
	</logger>
	<logger name="org.apache.ibatis" level="debug" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="server" />
		<appender-ref ref="error" />
	</logger>

	<root level="info">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="server" />
		<appender-ref ref="info" />
	</root>
</configuration>
